<?xml version="1.0"?>
<block>
  <name>Energy Detection</name>
  <key>macprotocols_cs</key>
  <category>[Energy Detection]</category>
  <import>import macprotocols</import>
  <make>macprotocols.cs($num_samples, $gain)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Gain discount</name>
    <key>gain</key>
    <type>int</type>
  </param>
  <param>
    <name>Number of samples FFT</name>
    <key>num_samples</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>in_control</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out_csense</name>
    <type>message</type>
    <optional>1</optional>
  </source>

</block>