<?xml version="1.0"?>
<block>
  <name>My Switch</name>
  <key>macprotocols_myswitch</key>
  <category>[MAC Protocols Aux]</category>
  <import>import macprotocols</import>
  <make>macprotocols.myswitch($portid)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Default port ID</name>
    <key>portid</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in0</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>in1</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>in2</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>in3</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>in4</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  
  <sink>
    <name>ctrl in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out0</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>out1</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>out2</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>out3</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>out4</name>
    <type>message</type>
    <optional>1</optional>
  </source>

</block>
