<?xml version="1.0"?>
<block>
  <name>CSMA/CA</name>
  <key>macprotocols_csma_ca</key>
  <category>macprotocols</category>
  <import>import macprotocols</import>
  <make>macprotocols.csma_ca($slot_time, $sifs, $difs)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Slot time (us)</name>
    <key>slot_time</key>
    <type>int</type>
  </param>

  <param>
    <name>Sifs (us)</name>
    <key>sifs</key>
    <type>int</type>
  </param>

  <param>
    <name>Difs (us)</name>
    <key>difs</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>mac in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>phy in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>mac out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>phy out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

</block>
