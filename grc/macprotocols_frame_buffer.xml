<?xml version="1.0"?>
<block>
  <name>Frame buffer</name>
  <key>macprotocols_frame_buffer</key>
  <category>[MAC Protocols Aux]</category>
  <import>import macprotocols</import>
  <make>macprotocols.frame_buffer($buff_size, $arp)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Buffer size</name>
    <key>buff_size</key>
    <type>int</type>
  </param>

  <param>
    <name>Look up ARP table?</name>
    <key>arp</key>
    <type>bool</type>
    <option>
      <name>True</name>
      <key>True</key>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>frame in</name>
    <type>message</type>
    <optional>0</optional>
  </sink>

  <sink>
    <name>ctrl in</name>
    <type>message</type>
    <optional>0</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>frame out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

</block>
